/* pages/index/index.wxss */
page{
  width: 100%;
}
.ml-index{
  width: 100%;
  height: 100%;
  margin: 0;
  display: flex;
  flex-direction: column;
}
.ml-index-header{
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ml-index-input{
  width: 60%;
  height: 50rpx;
  line-height: 60rpx;
  border: 1rpx solid #7c7b7b;
  border-radius: 5rpx;
}
.slide-image{
  width: 100%;
  height: 300rpx;
}
input{
  border: none;
  font-size: 28rpx;
  padding-left: 50rpx;
}
.nav{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 30rpx;
  font-size: 30rpx;
}
.nav view{
  width: 150rpx;
  height: 170rpx;
  margin: 30rpx 0;
  text-align: center;
}
.nav view image{
  width: 100%;
  height: 85%;
}
.list{
  width: 100%;
  height: 100%;
  background: #ffc23e;
}
.list-img{
  width: 100%;
  height: 160rpx;
}
.list-img image{
  width: 100%;
  height: 100%;
}
.list-product{
  width: 100%;
  height: 100%;
  justify-content: space-around;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 40rpx;
}
.list-product image{
  width: 40%;
  height: 300rpx;
  margin-top: 20rpx;
}
.buy-limit{
  width: 100%;
  height: 500rpx;
}
.icon-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}
.icon-title image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 24rpx;
  left: 62%;
}
.wrap{
  width: 100%;
  height: 500rpx;
  overflow: auto;
  padding-bottom: 40rpx;
}
.slider{
  width:325%;
  height: 450rpx;
  display: flex;
  justify-content: space-around;
  font-size: 34rpx;
}
.slider-list{
  width: 320rpx;
  height: 450rpx;
  margin: 0 10rpx;
}
.slider-list-img{
  width: 320rpx;
  height: 320rpx;
}
.slider-list-img image{
  width: 100%;
  height: 100%;
}
.slider-list-title{
  width: 100%;
  height: 100rpx;
}
.price{
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
}
.new-price{
  color: #c81c28;
  margin-right: 20rpx;
}
.old-price{
  color: #7c7b7b;
  font-size: 30rpx;
  text-decoration: line-through;
}
.time{
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #fff4e6;
  color: #bf915a;
  font-size: 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  display: flex;
  padding-left:30rpx;
}
.time view{
  margin-right: 10rpx;
}
.new-product{
  width: 100%;
  height: 400rpx;
  padding: 30rpx 0;
  border-top: 10rpx solid #e2e0e0;
}
.new-product-img{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: space-around;
}
.left{
 width: 47%;
 height: 100%;
 background: pink;
}
.left image{
 width: 100%;
 height: 100%;
}
.right{
  width: 47%;
  height: 100%;
}
.right-top{
  width: 100%;
  height: 50%;
}
.right-bottom{
  margin-top: 10rpx;
  width: 100%;
  height: 50%;
}
.right image{
 width: 100%;
 height: 100%;
}
.tab-content{
  width: 100%;
  height: 500rpx;
  border-top: 10rpx solid #e2e0e0;
  margin-top: 130rpx;
}

.page,
.page__bd{
  height: 100%;
  background: white;
}
.weui-navbar{
  background: white;
}
.page__bd{
  padding-bottom: 0;
}
.weui-tab__content{
  width: 100%;
  height: 800rpx;
  /* background: pink; */
  padding-top: 20px;
  text-align: center;
  overflow: none;
}
.weui-tab  .weui-tab__panel {
  width: 100%;
  height: 800rpx;
  overflow: none;
}
 .weui-tab__panel{
   overflow: none;
  width: 90%;
 }
.index-img image{
  width: 90%;
  height: 400rpx;
}
.smll-img{
  width: 90%;
  height: 400rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between
}
.smll-img view{
  width: 30%;
  height: 100%;
}
.smll-img view image{
  width: 220rpx;
  height: 280rpx;
}
.smll-img view .text{
  width: 100%;
  height: 80rpx;
  font-size: 34rpx;
}
.price{
  color: #c81c28;
}
.likelist{
  width: 100%;
  height: 100%;
  margin-top: 1723rpx;
  border-top: 10rpx solid #e2e0e0;
}
.likelist-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.likelist-nav{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.item{
  width: 45%;
  height: 381rpx;
  margin-top: 30rpx;
}
.item image{
  width: 350rpx;
  height: 200rpx;
}
.item-price{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #c81c28;
}
.item-desc{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-num{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #c0bbbb;
}
.scroll-list{
  height: 100%;
}